{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "removeComments": true,
        "allowJs": false,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "outDir": "./build",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "./src/**/*"
    ]
}