{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "jsx": "preserve",
        "allowJs": false,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "./build",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "./build/**/*"
    ],
    "include": [
        "./src/**/*"
    ]
}