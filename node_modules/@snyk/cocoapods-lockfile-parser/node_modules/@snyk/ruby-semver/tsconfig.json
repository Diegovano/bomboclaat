{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "importHelpers": true,
    "strict": false,
    "allowJs": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": [
    "./lib/**/*"
  ]
}
